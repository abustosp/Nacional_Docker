# Hacer que el contenedor corra nacional_server.jar con los par√°metros de memoria especificados
CMD ["java", "-Xms128M", "-Xmx256M", "-XX:PermSize=128M", "-XX:MaxPermSize=256M", "-jar", "nacional_server.jar"]